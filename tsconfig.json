{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "alwaysStrict": true,
    "allowJs": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "module": "ES2022",
    "lib": ["ESNext", "dom"],
    "types": ["node"]
  },
  "include": ["./src", "tests/getGaslessWithdrawFee.ts"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
