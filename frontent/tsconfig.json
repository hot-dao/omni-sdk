{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "target": "ES2020",
    "allowJs": true,
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules"]
}
